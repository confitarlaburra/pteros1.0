#include "../src/stdheader.h"
#include "../src/MSD_task.h"
using namespace std;
using namespace pteros;
using namespace Eigen;



int main(int argc, char** argv){
  try {
    // Represents built-in and custom command line options
    Options options;
    parse_command_line(argc,argv, options);
    if (options.has("minZmaxZ") && options.has("rad")) {
      
    } else {
      cout<<"Parameters for cylinder needed"<<endl;
      return 0;
    }
    Trajectory_reader proc(options);
    proc.add_task( new MSD_cyl(options) );
    proc.run();
  } catch(const Pteros_error& e) {
    cout<<e.what()<<endl;
  }
}





